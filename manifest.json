{
    "name": "Manual Sitemapping Tools",
    "version": "0.0.2",
    "manifest_version": 3,
    "description": "Tooling to help map out a website manually.",

    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_title": "Click to open panel"
    },
    
    "side_panel": {
        "default_path": "html/sidepanel.html"
    },
    
    "permissions": [
        "sidePanel",
        "scripting",
        "activeTab"
    ],
    
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "js/content.js" ],
            "run_at": "document_end"
        }
    ]
}
